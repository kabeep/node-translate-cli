{
    "name": "@kabeep/node-translate-cli",
    "version": "1.2.2",
    "type": "module",
    "description": "A powerful, secure and feature-rich command line via Google Translation.",
    "main": "./dist/cli.js",
    "types": "./dist/cli.d.ts",
    "files": [
        "dist"
    ],
    "bin": {
        "translate": "./dist/cli.js"
    },
    "scripts": {
        "prepare": "husky install",
        "dev": "cross-env NODE_NO_WARNINGS=1 node --loader ts-node/esm bin/cli.ts",
        "lint": "biome check src --write",
        "lint:staged": "biome check src --write --staged",
        "lint:changed": "biome check src --write --changed",
        "lint-staged": "lint-staged",
        "pretest": "npm run lint",
        "test": "vitest run",
        "coverage": "vitest run --coverage",
        "watch": "tsup --watch",
        "watch:test": "vitest",
        "build": "tsup --dts --treeshake smallest"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.6",
        "@types/node": "^22.5.0",
        "@types/yargs": "^17.0.32",
        "@vitest/coverage-istanbul": "^3.2.4",
        "cross-env": "^10.1.0",
        "husky": "^9.0.11",
        "lint-staged": "^16.2.5",
        "ts-node": "^10.9.2",
        "tsup": "^8.5.0",
        "typescript": "^5.4.5",
        "vitest": "^4.0.4"
    },
    "dependencies": {
        "@kabeep/exception": "^1.2.3",
        "@kabeep/node-translate": "^1.1.6",
        "log-symbols": "^7.0.1",
        "ora": "^8.0.1",
        "os-locale": "^6.0.2",
        "yargs": "^17.7.2"
    },
    "author": "Zhang Zixin (kabeep)",
    "homepage": "https://github.com/kabeep/node-translate-cli#readme",
    "repository": "git@github.com:kabeep/node-translate-cli.git",
    "bugs": "https://github.com/kabeep/node-translate-cli/issue",
    "keywords": [
        "nodejs",
        "node cli",
        "translate",
        "translate cli",
        "google translate",
        "google translate cli",
        "node translate",
        "node translate cli"
    ],
    "engines": {
        "node": ">=16"
    },
    "license": "MIT"
}
